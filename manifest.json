{
    "manifest_version": 2,

    "name": "Sobnik Crawler",
    "description": "Sobnik Crawler",
    "version": "1.0",

    "permissions": [
	"http://localhost:8081/*",
	"http://*/*",
	"https://*/*",
	"tabs"
    ],

    "background": {
	"scripts": ["jquery.js", "crawler.js"],
	"persistent": true
    },
    
    "content_scripts": [
	{
	    "matches": ["http://www.avito.ru/*", "https://www.avito.ru/*"],
	    "js": ["jquery.js", "api.js", "avito.js"]
	}
    ]

}
